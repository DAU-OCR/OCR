{
  "name": "ocr-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron.cjs",
  "homepage": ".",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "framer-motion": "^12.23.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.yourcompany.ocrapp",
    "files": [
      "dist/**/*",
      "electron.cjs"
    ],
    "extraFiles": [
      {
        "from": "../server/dist/ocr_server.exe",
        "to": "."
      },
      {
        "from": "../server/custom_weights",
        "to": "custom_weights"
      },
      {
        "from": "../server/custom_weights_easyOCR",
        "to": "custom_weights_easyOCR"
      },
      {
        "from": "../server/yolov5",
        "to": "yolov5"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": ["zip"],
      "icon": "public/icons/logo.ico"
    }
  }
}
